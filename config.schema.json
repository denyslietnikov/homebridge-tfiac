{
    "pluginAlias": "AirCondionerAccessory",
    "pluginType": "accessory",
    "singular": false,
    "schema": {
      "type": "object",
      "properties": {
        "name": {
          "title": "Name",
          "type": "string",
          "required": true
        },
        "ip": {
          "title": "IP",
          "type": "string",
          "required": true,
          "format": "ipv4",
          "placeholder": "192.168.1.1"
        },
        "mac": {
            "title": "MAC Address",
            "type": "string",
            "pattern": "^([A-Fa-f0-9]{2}:){5}[A-Fa-f0-9]{2}$",
            "required": true,
            "placeholder": "ea:34:96:e7:34:05"

          },
        "increments": {
          "title": "Increments",
          "type": "number",
          "required": false,
          "minimum": 0.5,
          "maximum": 1
        },
        "display": {
          "title": "Display",
          "type": "boolean",
          "required": false
        },
        "health": {
          "title": "Health",
          "type": "boolean",
          "required": false
        },
        "clean": {
          "title": "Clean",
          "type": "boolean",
          "required": false
        },
        "sleep": {
          "title": "Sleep",
          "type": "boolean",
          "required": false
        },
        "mildew": {
            "title": "Mildew",
            "type": "boolean",
            "required": false
        },
        "auto": {
          "title": "Auto fan speed",
          "type": "boolean",
          "required": false
        },
        "swing": {
          "title": "Swing",
          "type": "integer",
          "required": false,
          "minimum": 1,
          "maximum": 3
        }
      }
    },
    "form": null,
    "display": null
  }