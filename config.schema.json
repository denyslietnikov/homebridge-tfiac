{
  "pluginAlias": "TfiacPlatform",
  "pluginType": "platform",
  "singular": false,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Platform Name",
        "type": "string",
        "default": "TfiacPlatform"
      },
      "devices": {
        "type": "array",
        "title": "Devices",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "title": "Name",
              "type": "string",
              "required": true
            },
            "ip": {
              "title": "IP",
              "type": "string",
              "required": true,
              "format": "ipv4",
              "placeholder": "192.168.1.1"
            },
            "increments": {
              "title": "Increments",
              "type": "number",
              "required": false,
              "minimum": 0.5,
              "maximum": 1
            },
            "enableDisplay": {
              "title": "Display",
              "type": "boolean",
              "required": false
            },
            "enableSleep": {
              "title": "Sleep",
              "type": "boolean",
              "required": false
            },
            "enableDry": {
              "title": "Dry",
              "type": "boolean",
              "required": false
            },
            "enableFanOnly": {
              "title": "Fan Only",
              "type": "boolean",
              "required": false
            },
            "enableTurbo": {
              "title": "Turbo",
              "type": "boolean",
              "required": false
            },
            "enableEco": {
              "title": "Eco",
              "type": "boolean",
              "required": false
            },
            "enableBeep": {
              "title": "Beep",
              "type": "boolean",
              "required": false
            },
            "enableHorizontalSwing": {
              "title": "Horizontal Swing",
              "type": "boolean",
              "required": false
            },
            "enableIFeelSensor": {
              "title": "iFeel",
              "type": "boolean",
              "required": false
            },
            "enableStandaloneFan": {
              "title": "Standalone Fan",
              "type": "boolean",
              "required": false
            },
            "enableTemperature": {
              "title": "Temperature",
              "type": "boolean",
              "required": false
            },
            "enableFanSpeed": {
              "title": "Fan Speed",
              "type": "boolean",
              "required": false
            },
            "temperatureCorrection": {
              "type": "number",
              "title": "Temperature Correction",
              "description": "Correction factor (in Celsius) to be added to the measured indoor temperature. Use negative value to decrease reported temperature."
            }
          }
        }
      },
      "debug": {
        "title": "Debug Logging",
        "description": "Enable plugin-specific debug logging",
        "type": "boolean",
        "required": false,
        "default": false
      }
    }
  },
  "form": null,
  "display": null
}