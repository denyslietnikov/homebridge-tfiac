{
  "pluginAlias": "TfiacPlatform",
  "pluginType": "platform",
  "singular": false,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Platform Name",
        "type": "string",
        "default": "TfiacPlatform"
      },
      "devices": {
        "type": "array",
        "title": "Devices",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "title": "Name",
              "type": "string",
              "required": true
            },
            "ip": {
              "title": "IP",
              "type": "string",
              "required": true,
              "format": "ipv4",
              "placeholder": "192.168.1.1"
            },
            "increments": {
              "title": "Increments",
              "type": "number",
              "required": false,
              "minimum": 0.5,
              "maximum": 1
            },
            "display": {
              "title": "Display",
              "type": "boolean",
              "required": false
            },
            "health": {
              "title": "Health",
              "type": "boolean",
              "required": false
            },
            "clean": {
              "title": "Clean",
              "type": "boolean",
              "required": false
            },
            "sleep": {
              "title": "Sleep",
              "type": "boolean",
              "required": false
            },
            "mildew": {
              "title": "Mildew",
              "type": "boolean",
              "required": false
            },
            "auto": {
              "title": "Auto fan speed",
              "type": "boolean",
              "required": false
            },
            "swing": {
              "title": "Swing",
              "type": "integer",
              "required": false,
              "minimum": 1,
              "maximum": 3
            },
            "enableDry": {
              "title": "Enable Dry Mode Switch",
              "type": "boolean",
              "required": false
            },
            "enableFanOnly": {
              "title": "Enable Fan Only Mode Switch",
              "type": "boolean",
              "required": false
            },
            "enableTurbo": {
              "title": "Enable Turbo Switch",
              "type": "boolean",
              "required": false
            },
            "enableEco": {
              "title": "Enable Eco Switch",
              "type": "boolean",
              "required": false
            },
            "enableBeep": {
              "title": "Enable Beep Switch",
              "type": "boolean",
              "required": false
            },
            "enableHorizontalSwing": {
              "title": "Enable Horizontal Swing Switch",
              "type": "boolean",
              "required": false
            },
            "enableStandaloneFan": {
              "title": "Enable Standalone Fan Service",
              "type": "boolean",
              "required": false
            }
          }
        }
      }
    }
  },
  "form": null,
  "display": null
}